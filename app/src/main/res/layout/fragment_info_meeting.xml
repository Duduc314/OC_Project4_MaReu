<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.InfoMeetingFragment">

    <!-- Toolbar implementation -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_fragment_info_meeting"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:titleTextColor="#FFFFFF"
        app:titleTextAppearance="@style/ToolbarTitleStyle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_fragment_info_meeting"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Meeting room -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:useDefaultMargins="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_height="35dp"
                    android:layout_width="35dp"
                    android:src="@drawable/ic_location_on_blue_24dp"
                    android:layout_column="0"
                    android:layout_row="0"/>
                <TextView
                    android:id="@+id/text_info_meeting_room"
                    android:text="@string/text_info_meeting_room"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="center_vertical"/>
            </GridLayout>

            <!-- Date -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:useDefaultMargins="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_height="35dp"
                    android:layout_width="35dp"
                    android:src="@drawable/ic_today_blue_24dp"
                    android:layout_column="0"
                    android:layout_row="0"/>
                <TextView
                    android:id="@+id/text_info_meeting_date"
                    android:text="@string/text_info_meeting_date"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="center_vertical"/>
            </GridLayout>

            <!-- Hour -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:useDefaultMargins="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_height="35dp"
                    android:layout_width="35dp"
                    android:src="@drawable/ic_access_time_blue_24dp"
                    android:layout_column="0"
                    android:layout_row="0"/>
                <TextView
                    android:id="@+id/text_info_meeting_hour"
                    android:text="@string/text_info_meeting_hour"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="center_vertical"/>
            </GridLayout>

            <!-- List of participants -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:hint="Participants">
                <AutoCompleteTextView
                    android:id="@+id/text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>